<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <diskStore path="java.io.tmpdir" />

    <defaultCache maxElementsInMemory="1" eternal="false"
                  timeToIdleSeconds="600" timeToLiveSeconds="600" overflowToDisk="false" />
    
    <cache name="category" maxElementsInMemory="6969" />
    <cache name="product" maxElementsInMemory="6969" />
    
    <cache name="category.all" maxElementsInMemory="10000" eternal="false" timeToIdleSeconds="600"
           timeToLiveSeconds="600" overflowToDisk="false"/>
    <cache name="product.byId" maxElementsInMemory="10000" eternal="false" timeToIdleSeconds="600"
           timeToLiveSeconds="600" overflowToDisk="false"/>
    <cache name="product.byName" maxElementsInMemory="10000" eternal="false" timeToIdleSeconds="600"
           timeToLiveSeconds="600" overflowToDisk="false"/>
