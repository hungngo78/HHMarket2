@model PagedList.IPagedList<HHMarketWebApp.Models.Category>
@using PagedList.Mvc;

<div style="width: 100%; margin-top:60px">
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item  ">
            <img src="~/assets/page1.jpg" class="img_category">
        </div>

        <div class="item active">
            <img src="~/assets/page2.jpg" class="img_category">
        </div>

        <div class="item">
            <img src="~/assets/page3.jpg" class="img_category">
        </div>
        <div class="item">
            <img src="~/assets/page4.jpg" class="img_category">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="container" style="margin-top: 50px;">
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-sm-3" style="background-color:white;">
            <a href="../Production/Index?categoryId=@item.CategoryId&page=1">
            <!--a href="../Production/ReviewProduction?id=2"-->
                <div class="Rectangle">
                    <!--img src="~/assets/@Html.DisplayFor(model =>item.Picture)" style="padding-top:10px; padding-bottom:10px" class="product_img" alt="No Image" /-->
                    <img src="@item.PictureURL()" style="padding-top:10px; padding-bottom:10px" class="product_img" alt="No Image" />
                    <div class="TempoCategoryTile-content">
                        <p class="product_lb">@Html.DisplayFor(modelItem => item.Name)</p>
                    </div>
                </div>
            </a>
        </div>
        }
    </div>
    <div class="row text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>

