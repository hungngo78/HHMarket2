

@model HHMarketWebApp.Models.User

<link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css' />

<style>
    .field-icon {
        float: right;
        margin-left: -25px;
        margin-top: -25px;
        position: relative;
        z-index: 2;
    }
</style>

<div class="pages">
    <div class="cardwrapper">
        <div class="card-pad" id="basic_login">
            <div class="card-title">Register Account</div>
            <div class="card-content">
                <div class="container__child signup__form">
                    @using (Html.BeginForm("Update", "Registration", FormMethod.Post))
                    { 
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName)
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.UserName, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.FirstName)
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName)
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.LastName, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Address)
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.Address, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.City)
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.City, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.State)
                            @Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.State, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ZipCode)
                            @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.ZipCode, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.Email, "", new { style = "color:red;" })
                            }
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password)
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { id = "myPassword", @class = "form-control", type = "password", placeholder = "" } })
                            <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            @if (ViewBag.RegisterFailure == 1)
                            {
                                @Html.ValidationMessageFor(model => model.Password, "", new { style = "color:red;" })
                            }
                        </div>

                        <div class="m-t-lg">
                            <ul class="list-inline">
                                <li>
                                    <input class="btn btn--form" type="submit" value="Registration" />
                                </li>
                                <!--li>
                                    <a class="signup__link" asp-area="" href="Login" asp-controller="User" asp-action="Login">I am already a member</a>
                                </li-->
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".toggle-password").click(function() {
        $(this).toggleClass("fa-eye fa-eye-slash");

        var x = document.getElementById("myPassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    });
</script>